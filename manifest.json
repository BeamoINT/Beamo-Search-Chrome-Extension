{
  "manifest_version": 3,
  "name": "Beamo Search Helper",
  "version": "1.0",
  "description": "Makes Beamo Search an available search engine option.",
  "action": {},
  "icons": {
    "128": "icon.png"
  },
  "chrome_settings_overrides" : {
    "search_provider" : {
      "name" : "Beamo",
      "keyword" : "Beamo",
      "search_url" : "https://beamosearch.com/results.html?q={searchTerms}",
      "favicon_url" : "https://beamosearch.com/favicon.ico",
      "encoding" : "UTF-8",
      "is_default" : true
    }
  }
}